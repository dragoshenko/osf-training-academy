<?xml version="1.0" encoding="UTF-8"?>
<form>
    <section title="Address Details">
        <field type="text" id="name" label="Name" required="true"/>
        <field type="text" id="address" label="Address" required="true"/>
        <field type="text" id="city" label="City" required="true"/>
        <field type="text" id="zip" label="ZIP Code" required="true"/>
    </section>
    <section title="Payment Details">
        <field type="text" id="cardNumber" label="Card Number" required="true"/>
        <field type="month" id="expiryDate" label="Expiry Date" required="true"/>
        <field type="text" id="cvv" label="CVV" required="true"/>
    </section>
    <section title="Additional Information">
        <field type="textarea" id="comments" label="Comments" maxlength="150"/>
    </section>
</form>